<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nocoder.community.dao.UserMapper">
    <sql id="selectFields">
         id,username,password,salt,type,status,activation_code,header_url,create_time
    </sql>
    <sql id="insertFields">
        id,username,password,salt,type,status,activation_code,header_url,create_time
    </sql>
    <insert id="insertUser" parameterType="com.nocoder.community.entity.User" keyProperty="id">
        insert into user (<include refid="insertFields"></include>)
        values (#{id},#{username},#{password},#{salt},#{type},#{status},#{activationCode},#{headerUrl},#{createTime})

    </insert>
    <update id="updateStatus">
        update user set status=#{status} where id=#{id}
    </update>
    <update id="updateHeader">
        update user set header_url=#{headrUrl} where id=#{id}
    </update>
    <update id="updatePassword">
        update user set password=#{password} where id=#{id}
    </update>

    <select id="selectByid" resultType="com.nocoder.community.entity.User">
        select <include refid="selectFields"></include>from user where  id=#{id}
    </select>
    <select id="selectByName" resultType="com.nocoder.community.entity.User">
        select <include refid="selectFields"></include>from user where  username=#{name}
    </select>
    <select id="selectByEmail" resultType="com.nocoder.community.entity.User">
        select <include refid="selectFields"></include>from user where  email=#{email}
    </select>
</mapper>